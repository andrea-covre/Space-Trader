<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<StackPane id="background" stylesheets="@../css/defaultBackground.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="primary.scenes.NameSelectionScene">
   <children>
      <BorderPane stylesheets="@../css/defaultBackground.css">
         <center>
            <VBox alignment="CENTER" minWidth="400.0" prefHeight="200.0" prefWidth="100.0" stylesheets="@../css/Styles.css" BorderPane.alignment="CENTER">
               <children>
                  <TextField id="clear" fx:id="field" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="400.0" stylesheets="@../css/defaultBackground.css">
                     <font>
                        <Font size="64.0" />
                     </font>
                  </TextField>
                  <Button id="clearRed" fx:id="continueButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleContinue" text="Continue" textFill="RED">
                     <font>
                        <Font name="Comic Sans MS" size="64.0" />
                     </font>
                  </Button>
                  <Button id="clearRed" fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Back" textFill="RED">
                     <font>
                        <Font name="Comic Sans MS" size="64.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </center>
         <top>
            <Text id="r" fx:id="title" fill="YELLOW" stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.0" text="What is your name Trader?" textAlignment="CENTER" textOrigin="TOP" BorderPane.alignment="TOP_CENTER">
               <font>
                  <Font name="Comic Sans MS" size="64.0" />
               </font>
            </Text>
         </top>
      </BorderPane>
   </children>
</StackPane>
