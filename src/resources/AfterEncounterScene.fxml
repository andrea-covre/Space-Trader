<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<StackPane fx:id="backgroundPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/Styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="primary.scenes.AfterEncounterScene">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" stylesheets="@../css/Styles.css">
         <children>
            <Text fx:id="title" fill="YELLOW" strokeType="OUTSIDE" strokeWidth="0.0" text="TITLE" textAlignment="CENTER">
               <font>
                  <Font name="Comic Sans MS" size="55.0" />
               </font>
            </Text>
            <Text fx:id="message" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="description of what happen --------------------------------------------------------" textAlignment="CENTER" wrappingWidth="600.0" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="25.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Text>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button id="clear" fx:id="contButton" mnemonicParsing="false" onAction="#contAction" text="Continue" textAlignment="CENTER" textFill="RED" underline="true">
                     <font>
                        <Font name="Comic Sans MS" size="30.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
