<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="backgroundPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/Styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="primary.scenes.SPEncounterScene">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" stylesheets="@../css/Styles.css">
         <children>
            <Text fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="SpacePolice!">
               <font>
                  <Font name="Comic Sans MS" size="70.0" />
               </font>
            </Text>
            <Text fill="YELLOW" strokeType="OUTSIDE" strokeWidth="0.0" text="The Space Police board your ship on account of your extremly on-brand styling, and demand you forfeit some cargo!" textAlignment="CENTER" wrappingWidth="500.0">
               <font>
                  <Font size="30.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Text>
            <Text fx:id="demandedItems" fill="YELLOW" strokeType="OUTSIDE" strokeWidth="0.0" text="demanded items:" textAlignment="CENTER" wrappingWidth="500.0">
               <font>
                  <Font size="30.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Text>
            <HBox alignment="CENTER" maxWidth="800.0" prefHeight="100.0" prefWidth="200.0" spacing="100.0" stylesheets="@../css/Styles.css" VBox.vgrow="ALWAYS">
               <children>
                  <Button id="clear" fx:id="runButton" mnemonicParsing="false" onAction="#runAction" text="RUN!" textFill="RED" underline="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font name="Comic Sans MS" size="35.0" />
                     </font>
                  </Button>
                  <Button id="clear" fx:id="fightButton" mnemonicParsing="false" onAction="#fightAction" text="FIGHT!" textFill="RED" underline="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font name="Comic Sans MS" size="35.0" />
                     </font>
                  </Button>
                  <Button id="clear" fx:id="forfeitButton" mnemonicParsing="false" onAction="#forfeitAction" text="Forfeit :(" textFill="RED" underline="true">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font name="Comic Sans MS" size="35.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
